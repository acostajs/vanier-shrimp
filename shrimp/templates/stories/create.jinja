{% extends "base.jinja" %}
{% block title %}Submit a new story{% endblock %}

{% block content %}
    <h1>Submit a Story</h1>

    <form method="post" class="story-form">
        <label for="title"> 
            Title
            <input type="text" name="title" value="{{ form.title }}" />
        </label>
        {% if form.field_errors.title %}
            <div class="error">{{ form.field_errors.title }}</div>
        {% endif %}

        <label for="link">
            Link
            <input type="text" name="link" value="{{ form.link }}" />
        </label>
        {% if form.field_errors.link %}
            <div class="error">{{ form.field_errors.link }}</div>
        {% endif %}

        <label for="description">
            Description
            <textarea name="description" rows="5">{{ form.description }}</textarea>    
        </label>
        

        <button type="submit">Submit</button>
    </form>
{% endblock %}
